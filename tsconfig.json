{
    "compilerOptions": {
        "outDir": "public/javascript",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node"
    },
    "include": [ "src/javascript/**/*" ]
}